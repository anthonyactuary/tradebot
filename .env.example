# Kalshi environment: demo or prod
KALSHI_ENV=demo

# API root host (leave empty to use env default)
# demo: https://demo-api.kalshi.co
# prod: https://api.elections.kalshi.com
KALSHI_BASE_URL=

# Auth (required for trading endpoints)
KALSHI_KEY_ID=
KALSHI_PRIVATE_KEY_PATH=

# Bot settings
MARKET_TICKERS=   # comma-separated, e.g. KXHIGHNY-24JAN01-T60
POLL_SECONDS=2.0

# Alert thresholds
WHALE_TRADE_COUNT=500
WHALE_BOOK_LEVEL_QTY=1000

# Market maker
MM_ORDER_COUNT=5
MM_MIN_SPREAD_CENTS=2
MM_IMPROVE_CENTS=1
MM_POST_ONLY=true
